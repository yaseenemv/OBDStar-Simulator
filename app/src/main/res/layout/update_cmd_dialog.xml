<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/textView" android:layout_width="80dp" android:layout_height="match_parent" android:text="Command: "/>
        <EditText android:id="@+id/edit_command" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow android:orientation="horizontal" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/textView2" android:layout_width="80dp" android:layout_height="match_parent" android:text="Response: "/>
        <EditText android:id="@+id/edit_response" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </TableRow>
</TableLayout>
